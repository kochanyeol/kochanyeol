          ]
        }
      ],
      "source": [
        "# 힐러의 능력치\n",
        "healer = \"힐러\"\n",
        "healer__strength = 20\n",
        "healer__agility = 40\n",
        "healer__intelligence = 70\n",
        "healer__health = 70\n",
        "\n",
        "# 회복 사용 가능 여부 확인\n",
        "can__use__intelligence = healer__intelligence >= 60\n",
        "can__use__health = healer__health >= 50\n",
        "\n",
        "# 지문의 지능60 이상이\"고\" 체력50 이상인지 물음으로\n",
        "# 둘 다 이상이여야 한다.\n",
        "# 그로인해 and를 사용함으로 힘, 체력 둘 다 사용가능한지\n",
        "# 확인 여부를 체크\n",
        "heal__result = [\"불가능\", \"가능\"][can__use__intelligence and can__use__health]\n",
        "\n",
        "# 결과 출력\n",
        "print(f'{healer}는 파티의 체력을 회복 {heal__result}합니다.')"
      ]
    },
